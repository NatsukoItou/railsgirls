<div id="<%= dom_id idea %>">
  <p>
    <strong>Name:</strong>
    <%= idea.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= idea.description %>
  </p>

  <p>
    <strong>Picture:</strong>
  </p>
  <p>
    <%= image_tag(idea.picture_url, width: 300, class: "hghg") if idea.picture? %>
  </p>

</div>
